<div class="container mt-5">
<h2 class="mt-5">Editer mon compte</h2>

<div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Nous attendons la confirmation de : <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field my-3">
    <%= f.label "Mot de passe" %> <i>(ne pas remplir si inchangé)</i><br />
    <%= f.password_field :password, autocomplete: "nouveau mot de passe" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>

  <div class="field my-3">
    <%= f.label "Confirmation" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nouveau mot de passe" %>
  </div>

  <div class="field my-3">
    <%= f.label "Mot de passe actuel" %> <i>(nécessaire pour confirmer les changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "mot de passe actuel" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>
</div>

<div>
<h3 class="mt-5">Supprimer mon compte</h3>

<p>Vous partez déjà? <%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Êtes-vous certain(e)?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
</div>
